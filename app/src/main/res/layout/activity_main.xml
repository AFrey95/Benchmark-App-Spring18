<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="ud432l.benchmark.android.historicapp.MainActivity"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:clipToPadding="false"
    android:background="@color/black_overlay">

    <ImageView
        android:layout_width="match_parent"
        app:srcCompat="@drawable/eof_title"
        android:id="@+id/imageView2"
        android:padding="10dp"
        android:background="@android:color/background_light"
        android:layout_height="100dp"
        tools:ignore="ContentDescription" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/titleimage"
        android:id="@+id/titleImage"
        tools:ignore="ContentDescription,InefficientWeight"
        android:adjustViewBounds="true"
        android:cropToPadding="false"
        android:contentDescription="@string/description0"
        android:layout_marginBottom="@dimen/marginImage"
        android:layout_marginTop="@dimen/marginImage"
        android:layout_gravity="center_vertical|center_horizontal"/>

    <Button
        android:text="@string/textBtnQR"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/mainBtnQR"
        style="@android:style/Widget.Holo.Button"
        android:textSize="@dimen/buttonSizeQR"
        android:layout_marginBottom="@dimen/margin"
        android:layout_gravity="center_vertical|center_horizontal"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/mainBtnEOF"
        style="@android:style/Widget.Holo.Button"
        android:textSize="@dimen/buttonSizeURL"
        android:layout_marginBottom="@dimen/margin"
        android:layout_gravity="center_vertical|center_horizontal"
        android:text="@string/textBtnEOF" />

    <Button
        android:text="@string/textBtnFH"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/mainBtnFH"
        style="@android:style/Widget.Holo.Button"
        android:textSize="@dimen/buttonSizeURL"
        android:layout_marginBottom="@dimen/margin"
        android:layout_gravity="center_vertical|center_horizontal"/>

    <TextView
        android:text="@string/txtCompany"
        android:layout_width="wrap_content"
        android:id="@+id/txtCompany"
        android:textAlignment="center"
        android:layout_weight="1"
        android:layout_height="0dp"
        android:gravity="bottom"
        android:layout_gravity="bottom" />

</LinearLayout>
